{% extends "base.html.twig" %}

{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('security_login')}}" method="post">
        {% if error %}
            <div class="alert alert-danger">Nom de compte ou mot de passe incorect</div>
        {% endif %}
        <div class="form-group">
            <input placeholder="Adresse email ..."required name="_username" type="text" class="form-control">
        </div>

        <div class="form-group">
            <input placeholder="Mot de passe ..."required name="_password" type="password" class="form-control">
        </div>
        <a href="{{ path('security_registration')}}">pas encore inscrit ? </a>
        <div class="form-group">
            <button type="submit" class="btn btn-success">
                Connexion
            </button>
        </div>
    </form>
{% endblock %}